@inherits LayoutComponentBase

@*
    Authentication layout with split design
    Left: Large gradient hero with artwork (hidden on mobile)
    Right: Form content (login/register)
*@

<div class="min-h-screen bg-bg-900 flex">
    <!-- Left Panel - Hero/Artwork (hidden on mobile, visible on md+) -->
    <div class="hidden md:flex md:w-1/2 lg:w-3/5 relative overflow-hidden">
        <!-- Gradient background -->
        <div class="absolute inset-0 bg-gradient-to-br from-accent/20 via-accent-2/20 to-bg-900"></div>

        <!-- Animated wave pattern -->
        <div class="absolute inset-0 opacity-20">
            <div class="wave wave1"></div>
            <div class="wave wave2"></div>
            <div class="wave wave3"></div>
        </div>

        <!-- Content overlay -->
        <div class="relative z-10 flex flex-col justify-between p-12 text-white">
            <!-- Logo/Brand -->
            <div>
                <div class="flex items-center gap-3">
                    <svg class="w-10 h-10 text-accent" viewBox="0 0 40 40" fill="currentColor">
                        <path d="M20 0C8.954 0 0 8.954 0 20s8.954 20 20 20 20-8.954 20-20S31.046 0 20 0zm0 36c-8.822 0-16-7.178-16-16S11.178 4 20 4s16 7.178 16 16-7.178 16-16 16z"/>
                        <path d="M28 20c0 4.418-3.582 8-8 8s-8-3.582-8-8 3.582-8 8-8 8 3.582 8 8z"/>
                        <circle cx="20" cy="20" r="4"/>
                    </svg>
                    <span class="text-2xl font-bold">TIDAL</span>
                </div>
            </div>

            <!-- Marketing content -->
            <div class="space-y-6 max-w-lg">
                <h1 class="text-5xl font-bold leading-tight">
                    Where Music
                    <span class="block gradient-text">Meets the Ocean</span>
                </h1>
                <p class="text-lg text-white/80 leading-relaxed">
                    Dive into a world of high-fidelity sound. Stream millions of songs with crystal-clear quality and discover your next favorite artist.
                </p>

                <!-- Feature highlights -->
                <div class="space-y-4 pt-4">
                    <div class="flex items-center gap-3">
                        <div class="w-8 h-8 rounded-full bg-accent/20 flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                        </div>
                        <span class="text-white/90">Hi-Fi lossless audio quality</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <div class="w-8 h-8 rounded-full bg-accent/20 flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a 1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z"/>
                            </svg>
                        </div>
                        <span class="text-white/90">Millions of tracks & exclusive content</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <div class="w-8 h-8 rounded-full bg-accent/20 flex items-center justify-center flex-shrink-0">
                            <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"/>
                            </svg>
                        </div>
                        <span class="text-white/90">Personalized recommendations</span>
                    </div>
                </div>
            </div>

            <!-- Footer text -->
            <div class="text-sm text-white/60">
                Â© 2024 Tidal. All rights reserved.
            </div>
        </div>
    </div>

    <!-- Right Panel - Form Content -->
    <div class="flex-1 flex items-center justify-center p-6 md:p-12">
        <div class="w-full max-w-md">
            <!-- Mobile logo (visible only on mobile) -->
            <div class="md:hidden flex justify-center mb-8">
                <div class="flex items-center gap-3">
                    <svg class="w-8 h-8 text-accent" viewBox="0 0 40 40" fill="currentColor">
                        <path d="M20 0C8.954 0 0 8.954 0 20s8.954 20 20 20 20-8.954 20-20S31.046 0 20 0zm0 36c-8.822 0-16-7.178-16-16S11.178 4 20 4s16 7.178 16 16-7.178 16-16 16z"/>
                        <path d="M28 20c0 4.418-3.582 8-8 8s-8-3.582-8-8 3.582-8 8-8 8 3.582 8 8z"/>
                        <circle cx="20" cy="20" r="4"/>
                    </svg>
                    <span class="text-2xl font-bold text-text-primary">TIDAL</span>
                </div>
            </div>

            <!-- Page content -->
            @Body
        </div>
    </div>
</div>

<style>
    /* Gradient text effect */
    .gradient-text {
        background: linear-gradient(135deg, var(--accent) 0%, var(--accent-2) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Wave animations for hero panel */
    .wave {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 200%;
        height: 100%;
        background: linear-gradient(180deg, transparent, rgba(0, 212, 255, 0.05));
        animation: wave 15s linear infinite;
    }

    .wave::before,
    .wave::after {
        content: '';
        position: absolute;
        width: 200%;
        height: 100%;
        top: 0;
        left: 50%;
        transform: translate(-50%, -75%);
    }

    .wave::before {
        border-radius: 45%;
        background: rgba(0, 212, 255, 0.08);
        animation: wave 15s infinite linear;
    }

    .wave::after {
        border-radius: 40%;
        background: rgba(139, 92, 246, 0.05);
        animation: wave 20s infinite linear;
    }

    .wave1 {
        animation-delay: 0s;
        opacity: 0.3;
    }

    .wave2 {
        animation-delay: -5s;
        opacity: 0.2;
    }

    .wave3 {
        animation-delay: -10s;
        opacity: 0.1;
    }

    @@keyframes wave {
        0% {
            transform: translateX(0) translateY(0) rotate(0deg);
        }
        100% {
            transform: translateX(-50%) translateY(10%) rotate(360deg);
        }
    }
</style>
